{
  "manifest_version": 2,
  "name": "Filterest",
  "description": "This extension will allow you to filter the content of the web pages based on your interests",
  "version": "0.0.1",
  "author": "Sorana",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo/logo16.png",
    "48": "logo/logo48.png",
    "128": "logo/logo128.png"
  },
  "background": {
    "scripts": ["app/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["app/content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": ["http://*/*", "https://*/*", "contextMenus"],
  "content_security_policy": "script-src 'self' 'sha256-ELkDE2InNI702G86lymxXYBdrcJq5bMn8+PhTgN6cks='; object-src 'self'"
}
